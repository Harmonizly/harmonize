{
  "plugins": [
    "syntax-flow",
    "transform-decorators-legacy",
    [
      "module-resolver",
      {
        "alias": {
          "client": "./src/client",
          "configuration:": "./config",
          "server": "./src/server",
          "static": "./static",
          "test": "./test"
        }
      }
    ]
  ],
  "presets": [
    [
      "env",
      {
        "loose": true,
        "useBuiltIns": true
      }
    ],
    "stage-0",
    "flow",
    "react"
  ],
  "sourceMaps": true,
  "ignore": [
    "node_modules"
  ],
  "env": {
    "test": {
      "plugins": ["istanbul"]
    }
  }
}
