{
  "plugins": [
    "syntax-flow",
    "transform-flow-strip-types",
    "transform-decorators-legacy",
    [
      "module-resolver",
      {
        "alias": {
          "configuration": "./config",
          "server": "./server",
          "static": "./static",
          "test": "./test"
        }
      }
    ]
  ],
  "presets": [
    [
      "env",
      {
        "loose": true,
        "useBuiltIns": true
      }
    ],
    "stage-0",
  ],
  "sourceMaps": true,
  "ignore": [
    "node_modules"
  ],
  "env": {
    "test": {
      "plugins": ["istanbul"]
    }
  }
}
